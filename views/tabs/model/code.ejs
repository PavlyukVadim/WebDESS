<div class="modal fade" id="code-mod" tabindex="-1" role="dialog" aria-labelledby="code-lab" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="code-lab">Function Transformation</h5>
        <button class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <form class="form">
          <div class="form-group my-1 w-100">
              <label class="col-form-label">Function:</label>
              <textarea class="form-control text-monospace small" id="function-text" placeholder="Function definition" rows="20"></textarea>
          </div>
          <div class="form-group my-1 w-100">
              <label class="col-form-label">Invocation:</label>
              <textarea class="form-control text-monospace small" id="function-invocation" placeholder="Invocation with specific arguments"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn-main" onclick="convertToFunction()">Convert to Function</button>
        <button class="btn-main" onclick="generateFromFunction()" data-dismiss="modal">Generate from Function</button>
        <button class="btn-main" onclick="clearProgrammingPopup()">Clear</button>
      </div>
    </div>
  </div>
</div>
